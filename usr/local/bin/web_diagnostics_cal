#!/bin/sh

DEV=BOLO_CAL
DIR=/dev/web_cals/
XMLNAME=$DEV

ADDED_WEB=0

add_web() {
if [ -e /var/www/d-tacq/acq_main_page.html ]; then
        grep -q $DEV /var/www/d-tacq/acq_main_page.html
        if [ $? -ne 0 ]; then
                sed -ie '/TABAPPEND/ {
a       <li><a title="'$DEV'" href="acq_info_page.html">'$DEV'</a></li>
}' /var/www/d-tacq/acq_main_page.html
        fi
        ADDED_WEB=1
fi
}

monitor() {
        
        
	[ $ADDED_WEB -eq 0 ] && add_web
	./web_cal_data.tcl |  fs2xml -o /dev/shm/$XMLNAME.xml -k ''
	sleep 1
        
}

if [ "$(basename $0)" = "web_diagnostics_cal" ]; then
        if [ -d $DIR ]; then
                monitor
        else
                echo ERROR: monitor dir not found: $DIR
        fi
fi


